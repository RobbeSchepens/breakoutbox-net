@model BreakOutBox.Models.SpelViewModels.SpelViewModel
@{
    ViewData["Title"] = "Geblokkeerd!";
}

<div class="container-fluid pt-4">
    <div class="row text-center">
        <div class="col mb-4">
            <h4 class="d-inline">@(Model.Opdracht.Oefening.Vak.Naam)</h4> <h2 class="d-inline ml-3 mr-3">@Model.Opdracht.Oefening.Naam</h2>
            <form asp-action="Feedback" class="d-inline" method="get">
                <button type="submit" class="btn btn-outline-primary btn-pill btn-sm d-inline sync"><i class="fas fa-sync-alt"></i></button>
            </form>
            <div class="progress progress-lg mt-3">
                <div class="progress-bar" role="progressbar" style="width: @(Model.PercentageVoltooid)%"
                     aria-valuenow="@(Model.PercentageVoltooid)" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-6 mb-5">
            @if (Convert.ToInt32(ViewData["State"]) != 4)
            {
                <h4>Gedeblokkeerd</h4>
                <p>Je groepje is gedeblokkeerd, jullie kunnen de opdracht opnieuw proberen.</p>
                <form asp-action="Feedback" method="post">
                    <button type="submit" class="btn btn-primary">Terug naar opdracht</button>
                </form>
            }
            else
            {
                <h4>Geblokkeerd</h4>
                <p>
                    Je groepje is geblokkeerd.
                    Lees de theorie grondig door en als jullie het begrijpen, kan je de leerkracht vragen om jullie te deblokkeren.
                    Nadat de leerkracht jouw groepje gedeblokkeerd heeft, druk dan eens op de herlaad-knop.
                </p>
                <form asp-action="Feedback" method="get">
                    <button type="submit" class="btn btn-outline-primary btn-pill btn-sm"><i class="fas fa-sync-alt"></i></button>
                </form>
            }
        </div>
        <div class="col-md-12 col-lg-6 mb-5">
            <h4>Feedback</h4>
            <p>Dit is de theorie die bij de opdracht hoort. Lees deze grondig door tot je het begrijpt.</p>
            <div class="pdfcontainer">
                <object type="application/pdf" data="~/algemenepdfs/Theorie.pdf" class="pdf"></object>
            </div>
        </div>
    </div>
</div>