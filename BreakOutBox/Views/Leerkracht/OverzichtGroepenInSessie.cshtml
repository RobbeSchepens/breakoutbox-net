@model BreakOutBox.Models.Domain.Sessie
@{
    ViewData["Title"] = "Overzicht";
}

<div class="row">
    <div class="col-12 col text-center">
        <h2>Sessie: @Model.Omschrijving</h2>
        <br>
        <h4>Status: @Model.GetState().Beschrijving</h4>
    </div>
</div>
<div class="row">
    @foreach (var groep in Model.Groepen)
    {
        <div class="sm-12 md-6 col groep">
            <h4><i class="fas fa-users fa-sm marginright"></i> Groep @(groep.GroepId)<i class="fas fa-times fa-sm erroricon"></i>@*<i class="fas fa-check fa-sm"></i>*@</h4>
            <ul>
                @foreach (var leerling in groep.Leerlingen)
                {
                    <li>@(leerling.Voornaam + " " + leerling.Achternaam)</li>
                }
            </ul>
        </div>
    }
</div>
<div class="float-right text-center">
    @Model.State
    @if (Model.State == 0) //NonActiefState
    {
        <a asp-controller="Leerkracht" asp-action="ActiveerSessie" asp-route-id="@Model.Code">Activeer</a>
    }
    @if (Model.State == 1) //ActiefState
    {
        <button asp-controller="Leerkracht" asp-action="DeactiveerSessie" asp-route-id="@Model.Code" class="">Deactiveer</button>
        <a asp-controller="Leerkracht" asp-action="BlokkeerSessie" asp-route-id="@Model.Code">Blokkeer</a>
        <a asp-controller="Leerkracht" asp-action="StartSpelSessie" asp-route-id="@Model.Code">Start</a>
    }
    @if (Model.State == 2) //InSpelState
    {
        <a asp-controller="Leerkracht" asp-action="DeactiveerSessie" asp-route-id="@Model.Code">Deactiveer</a>
        <a asp-controller="Leerkracht" asp-action="Blokkeer" asp-route-id="@Model.Code">Blokkeer</a>
    }
    @if (Model.State == 3) //GeblokkeerdState
    {
        <a asp-controller="Leerkracht" asp-action="DeblokkeerSessie" asp-route-id="@Model.Code">Deblokkeer</a>
    }
</div>
