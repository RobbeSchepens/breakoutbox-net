@model BreakOutBox.Models.Domain.Sessie
@{
    ViewData["Title"] = "Sessie";
}
@section Head {
    <link rel="stylesheet" href="~/css/groep.css">
}

<div class="container-fluid pt-4">
    <div class="row">
        <div class="col mb-4 text-center">
            <h4 class="d-inline">@ViewData["Title"]</h4> <h2 class="d-inline ml-3 mr-3">@Model.Omschrijving</h2>
            <form asp-action="SpelSpelen" asp-controller="Spel" class="d-inline" method="get">
                <button type="submit" style="margin-bottom: 0.75rem;" class="btn btn-outline-primary btn-pill btn-sm d-inline"><i class="fas fa-sync-alt"></i></button>
            </form>
            @if (ViewBag.GeselecteerdeGroep != null && Model.State == 2)
            {
                <form asp-controller="Sessie" asp-action="StartSpel" method="post" class="mt-3">
                    <button type="submit" class="btn btn-primary btn-pill btn-lg">Start de eerste opdracht</button>
                </form>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-6 mb-5">
            @if (ViewBag.GeselecteerdeGroep != null)
            {
                <h4>Jouw groep</h4>
                <div class="row mb-5" style="padding: 0 15px;">
                    <div class="col-12 col-sm-6 col-md-4 groep">
                        <ul>
                            <li><i class="fas fa-users fa-fw icon"></i>Groep #@(ViewBag.GeselecteerdeGroep.GroepId)</li>
                            @foreach (var leerling in ViewBag.GeselecteerdeGroep.Leerlingen)
                            {
                                <li><i class="far fa-user fa-fw icon"></i>@(leerling.Voornaam + " " + leerling.Achternaam)</li>
                            }
                            @if (ViewBag.GeselecteerdeGroep.State != 2)
                            {
                                <li><a href="@Url.Action("ZetGroepNietGereed", "Sessie")" class="tip" title="Klik hier om deze groep te deselecteren">Deze groep deselecteren</a></li>
                            }
                        </ul>
                    </div>
                </div>
            }
            <h4>Groep selecteren</h4>
            <p>Selecteer de groep waar jullie tot behoren.</p>
            <div class="row" style="padding: 0 15px;">
                @foreach (var groep in Model.Groepen)
                {
                    <div class="col-12 col-sm-6 col-md-4 groep">
                        <ul>
                            <li><i class="fas fa-users fa-fw icon"></i>Groep #@(groep.GroepId)</li>
                            @foreach (var leerling in groep.Leerlingen)
                            {
                                <li><i class="far fa-user fa-fw icon"></i>@(leerling.Voornaam + " " + leerling.Achternaam)</li>
                            }
                            @if (groep.State == 0 && groep.State != 2 && ViewBag.GeselecteerdeGroep == null)
                            {
                                <li><a href="@Url.Action("ZetGroepGereed", "Sessie", new { groepid = groep.GroepId.ToString() })" class="tip" title="Klik hier als dit jullie groep is">Dit is ons groepje</a></li>
                            }
                            @if (groep.State == 1 && groep.State != 2 && ViewBag.GeselecteerdeGroep != null && ViewBag.GeselecteerdeGroep.GroepId == groep.GroepId)
                            {
                                <li><a href="@Url.Action("ZetGroepNietGereed", "Sessie")" class="tip" title="Klik hier om deze groep te deselecteren">Deze groep deselecteren</a></li>
                            }
                            @if (groep.State == 1 && groep.State != 2 && ViewBag.GeselecteerdeGroep == null)
                            {
                                <li>Deze groep is niet beschikbaar</li>
                            }
                            @if (groep.State == 2)
                            {
                                <li>Deze groep is vergrendeld</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-12 col-lg-6 mb-5">
            <h4>Spelregels lezen</h4>
            <p>Lees goed de spelregels door alvorens je start met het spel.</p>
            <div id="pdfcontainer">
                <object type="application/pdf" data="~/algemenepdfs/instructies.pdf" id="pdf"></object>
            </div>
        </div>
    </div>
</div>