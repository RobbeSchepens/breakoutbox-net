@model BreakOutBox.Models.Domain.Sessie
@{
    bool isEenGroepGeselecteerd = false;
    foreach (var groep in Model.Groepen)
    {
        if (groep.State == 1)
        {
            isEenGroepGeselecteerd = true;
        }
    }
}
@{
    ViewData["Title"] = "Sessie";
}

<div class="row">
    <div class="col-12 col">
        <h2>Sessie: @Model.Omschrijving</h2>
    </div>
</div>

<div class="row">
    @foreach (var groep in Model.Groepen)
    {
        <div class="sm-12 md-6 col">
            <h4>Groep @(groep.GroepId)</h4>
            <ul>
                @foreach (var leerling in groep.Leerlingen)
                {
                    <li>@(leerling.Voornaam + leerling.Achternaam)</li>
                }
                <li><p></p></li>
                @*<li>
                        @Html.ActionLink("Klik hier als dit jouw groepje is", "VergrendelGroep", "Sessie", new { groepId = groep.GroepId }, "")
                    </li>
                    <li>
                        @Html.ActionLink("Klik hier om de groep terug te ontgrendelen", "OntgrendelGroep", "Sessie", new { groepId = groep.GroepId }, "")
                    </li>*@
                @if (!isEenGroepGeselecteerd && groep.State != 2)
                {
                    <li>
                        <a href="@Url.Action("ZetGroepGereed", "Sessie", new { groepId = groep.GroepId })">
                            <i class="fas fa-angle-double-right"></i> Klik hier als dit jouw groep is
                        </a>
                    </li>
                }
                @if (groep.State == 1 && groep.State != 2)
                {
                    <li>
                        <a href="@Url.Action("ZetGroepNietGereed", "Sessie", new { groepId = groep.GroepId })">
                            <i class="fas fa-angle-double-right"></i> Klik hier om de groep terug te ontgrendelen
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
</div>
<div class="row">
    <div class="sm-12 col">
        <p>@TempData["message"]</p>
    </div>
</div>

