@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Aanmelden als leerkracht";
}

<div class="container pt-4">
    <div class="row">
        <div class="col-auto">
            <h2 class="mb-4">@ViewData["Title"]</h2>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                @*<h4>Use a local account to log in.</h4>*@
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="naam@voorbeeld.com" type="email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Wachtwoord</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Uw wachtwoord">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-checkbox d-block">
                        <input asp-for="RememberMe" class="custom-control-input">
                        <label asp-for="RememberMe" class="custom-control-label">@Html.DisplayNameFor(m => m.RememberMe)</label>
                    </div>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Aanmelden</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-action="ForgotPassword">Wachtwoord vergeten?</a>
                    </p>
                    @*<p>
                            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Als leerkracht registreren?</a>
                        </p>*@
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}